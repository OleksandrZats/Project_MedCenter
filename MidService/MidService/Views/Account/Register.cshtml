@model MidService.ViewModels.RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<head>
    <link href="~/css/bootstrap-reboot.css" rel="stylesheet" type="text/css" />
    <link href="~/css/bootstrap-grid.css" rel="stylesheet" type="text/css" />
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" />
</head>
<body class="text-center" style="margin-left:35%; margin-right:35%; margin-top: 2%;">
    <form class="form-signin" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <h1 class="h3 mb-3 font-weight-normal">Please enter data</h1>

        <label class="sr-only" asp-for="Email">Email address</label>
        <input id="inputEmail" class="form-control" type="text" asp-for="Email" placeholder="Email address" required="" autofocus="">

        <label class="sr-only" asp-for="Password">Password</label>
        <input id="inputPassword" class="form-control" type="password" asp-for="Password" placeholder="Password" required="">

        <label class="sr-only" asp-for="ConfirmPassword">Repeat password</label>
        <input id="inputPassword" class="form-control" type="password" asp-for="ConfirmPassword" placeholder="Password" required="">

        <label class="sr-only" asp-for="FIO">FIO</label>
        <input id="inputPassword" class="form-control" asp-for="FIO" placeholder="FIO" required="">

        <label class="sr-only" asp-for="TNumber">Telephone number</label>
        <input id="inputPassword" class="form-control" asp-for="TNumber" placeholder="TNumber" required="">

        <label class="sr-only" asp-for="Gender">Gender</label>
        <input id="inputPassword" class="form-control" asp-for="Gender" placeholder="Gender" required="">


        <button class="btn btn-lg btn-primary btn-block" type="submit">Register in</button>
    </form>
</body>