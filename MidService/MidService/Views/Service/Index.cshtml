
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/site.css" />

<h1>Услуги</h1>
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @{
                foreach (var service in ViewBag.Services)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <h4 style="margin:auto">@service.Name</h4>
                            <div class="card-body">
                                <p class="card-text">@service.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary"><a href="/Service/Buy/@service.SeviceId">Заказать</a></button>
                                    </div>
                                    <small class="text-muted">@service.Price грн</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>
